<script>
    // ========================================
    // üöÄ BOOM OWNER DASHBOARD V2.0
    // ========================================

    let properties = [];
    let currentPropertyPhoto = null;
    let pendingFiles = [];

    const STORAGE_KEYS = {
        PROPERTIES: 'boomOwnerProperties',
        DOCUMENTS: 'boomOwnerDocuments'
    };

    const MAX_STORAGE_MB = 5;
    const MAX_FILE_SIZE = 3 * 1024 * 1024; // 3MB per file

    // Initialize App
    document.addEventListener('DOMContentLoaded', function() {
        loadProperties();
        setupEventListeners();
        updateUI();
    });

    function loadProperties() {
        const stored = localStorage.getItem(STORAGE_KEYS.PROPERTIES);
        if (stored) {
            try {
                properties = JSON.parse(stored);
            } catch (e) {
                console.error('Failed to load properties:', e);
                properties = [];
            }
        }
    }

    function saveToStorage() {
        try {
            localStorage.setItem(STORAGE_KEYS.PROPERTIES, JSON.stringify(properties));
            updateStorageInfo();
        } catch (e) {
            if (e.name === 'QuotaExceededError') {
                showNotification('Storage full! Please remove some files.', 'error');
            } else {
                console.error('Failed to save:', e);
            }
        }
    }

    function setupEventListeners() {
        // Document upload zone
        const docZone = document.getElementById('documentUploadZone');
        const docInput = document.getElementById('documentInput');

        docZone.addEventListener('click', () => docInput.click());
        
        docZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            docZone.classList.add('drag-over');
        });

        docZone.addEventListener('dragleave', () => {
            docZone.classList.remove('drag-over');
        });

        docZone.addEventListener('drop', (e) => {
            e.preventDefault();
            docZone.classList.remove('drag-over');
            handleDocumentUpload(e.dataTransfer.files);
        });

        docInput.addEventListener('change', (e) => {
            handleDocumentUpload(e.target.files);
        });

        // Modal clicks
        document.getElementById('propertyModal').addEventListener('click', (e) => {
            if (e.target.id === 'propertyModal') closePropertyModal();
        });

        document.getElementById('documentsModal').addEventListener('click', (e) => {
            if (e.target.id === 'documentsModal') closeDocumentsModal();
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                closePropertyModal();
                closeDocumentsModal();
            }
        });
    }

    // ========================================
    // PROPERTY MANAGEMENT
    // ========================================

    function openAddPropertyModal() {
        document.getElementById('modalTitle').textContent = 'Add Property';
        document.getElementById('propertyForm').reset();
        document.getElementById('propertyId').value = '';
        document.getElementById('photoPreview').innerHTML = '';
        currentPropertyPhoto = null;
        document.getElementById('propertyModal').classList.add('active');
    }

    function editProperty(id) {
        const property = properties.find(p => p.id === id);
        if (!property) return;

        document.getElementById('modalTitle').textContent = 'Edit Property';
        document.getElementById('propertyId').value = property.id;
        document.getElementById('propertyName').value = property.name;
        document.getElementById('propertyAddress').value = property.address;
        document.getElementById('propertyBeds').value = property.beds || '';
        document.getElementById('propertySize').value = property.size || '';
        document.getElementById('propertyPrice').value = property.price;
        document.getElementById('propertyStatus').value = property.status;
        document.getElementById('propertyTenant').value = property.tenant || '';
        document.getElementById('propertyDescription').value = property.description || '';

        // Show existing photo if any
        if (property.photo) {
            currentPropertyPhoto = property.photo;
            document.getElementById('photoPreview').innerHTML = `
                <div class="uploaded-file">
                    <img src="${property.photo}" class="file-preview" style="width: 50px; height: 50px; object-fit: cover;">
                    <div class="file-details">
                        <div class="file-name">Current Photo</div>
                    </div>
                    <button type="button" class="file-remove" onclick="removePropertyPhoto()">√ó</button>
                </div>
            `;
        }

        document.getElementById('propertyModal').classList.add('active');
    }

    function saveProperty(event) {
        event.preventDefault();

        const id = document.getElementById('propertyId').value || generateId();
        const property = {
            id: id,
            name: document.getElementById('propertyName').value.trim(),
            address: document.getElementById('propertyAddress').value.trim(),
            beds: document.getElementById('propertyBeds').value || 0,
            size: document.getElementById('propertySize').value || 0,
            price: parseFloat(document.getElementById('propertyPrice').value),
            status: document.getElementById('propertyStatus').value,
            tenant: document.getElementById('propertyTenant').value.trim(),
            description: document.getElementById('propertyDescription').value.trim(),
            photo: currentPropertyPhoto,
            documents: properties.find(p => p.id === id)?.documents || [],
            createdAt: properties.find(p => p.id === id)?.createdAt || new Date().toISOString(),
            updatedAt: new Date().toISOString()
        };

        const existingIndex = properties.findIndex(p => p.id === id);
        if (existingIndex !== -1) {
            properties[existingIndex] = property;
            showNotification('Property updated successfully', 'success');
        } else {
            properties.push(property);
            showNotification('Property added successfully', 'success');
        }

        saveToStorage();
        closePropertyModal();
        updateUI();
    }

    function deleteProperty(id) {
        const property = properties.find(p => p.id === id);
        if (!property) return;

        if (!confirm(`Delete "${property.name}"?\n\nThis will also delete all associated documents.\n\nThis cannot be undone.`)) {
            return;
        }

        properties = properties.filter(p => p.id !== id);
        saveToStorage();
        updateUI();
        showNotification('Property deleted successfully', 'success');
    }

    function closePropertyModal() {
        document.getElementById('propertyModal').classList.remove('active');
        currentPropertyPhoto = null;
    }

    // ========================================
    // PHOTO UPLOAD
    // ========================================

    function handlePropertyPhoto(event) {
        const file = event.target.files[0];
        if (!file) return;

        if (!file.type.startsWith('image/')) {
            showNotification('Please upload an image file', 'error');
            return;
        }

        if (file.size > MAX_FILE_SIZE) {
            showNotification('Image must be under 3MB', 'error');
            return;
        }

        const reader = new FileReader();
        reader.onload = (e) => {
            currentPropertyPhoto = e.target.result;
            document.getElementById('photoPreview').innerHTML = `
                <div class="uploaded-file">
                    <img src="${e.target.result}" class="file-preview" style="width: 50px; height: 50px; object-fit: cover;">
                    <div class="file-details">
                        <div class="file-name">${file.name}</div>
                        <div class="file-size">${formatFileSize(file.size)}</div>
                    </div>
                    <button type="button" class="file-remove" onclick="removePropertyPhoto()">√ó</button>
                </div>
            `;
            showNotification('Photo uploaded', 'success');
        };
        reader.readAsDataURL(file);
    }

    function removePropertyPhoto() {
        currentPropertyPhoto = null;
        document.getElementById('photoPreview').innerHTML = '';
        document.getElementById('propertyPhotoInput').value = '';
    }

    // ========================================
    // DOCUMENT MANAGEMENT
    // ========================================

    function openDocumentsModal(propertyId) {
        const property = properties.find(p => p.id === propertyId);
        if (!property) return;

        document.getElementById('currentPropertyId').value = propertyId;
        document.getElementById('documentsModalTitle').textContent = `Documents - ${property.name}`;
        document.getElementById('uploadedFilesList').innerHTML = '';
        pendingFiles = [];
        updateStorageInfo();
        document.getElementById('documentsModal').classList.add('active');
    }

    function closeDocumentsModal() {
        document.getElementById('documentsModal').classList.remove('active');
        if (pendingFiles.length > 0) {
            const propertyId = document.getElementById('currentPropertyId').value;
            saveDocuments(propertyId);
        }
        updateUI();
    }

    function handleDocumentUpload(files) {
        Array.from(files).forEach(file => {
            if (file.size > MAX_FILE_SIZE) {
                showNotification(`${file.name} is too large (max 3MB)`, 'error');
                return;
            }

            const reader = new FileReader();
            reader.onload = (e) => {
                const doc = {
                    id: generateId(),
                    name: file.name,
                    size: file.size,
                    type: file.type,
                    category: document.getElementById('documentCategory').value,
                    data: e.target.result,
                    uploadedAt: new Date().toISOString()
                };

                pendingFiles.push(doc);
                displayUploadedFile(doc);
                updateStorageInfo();
            };
            reader.readAsDataURL(file);
        });

        document.getElementById('documentInput').value = '';
    }

    function displayUploadedFile(doc) {
        const icon = getCategoryIcon(doc.category);
        const isImage = doc.type.startsWith('image/');
        
        const fileHtml = `
            <div class="uploaded-file" data-file-id="${doc.id}">
                ${isImage ? 
                    `<img src="${doc.data}" class="file-preview" style="width: 50px; height: 50px; object-fit: cover;">` :
                    `<div class="file-preview">${icon}</div>`
                }
                <div class="file-details">
                    <div class="file-name">${doc.name}</div>
                    <div class="file-size">${formatFileSize(doc.size)} ‚Ä¢ ${getCategoryName(doc.category)}</div>
                </div>
                <button class="file-remove" onclick="removePendingFile('${doc.id}')">√ó</button>
            </div>
        `;

        document.getElementById('uploadedFilesList').insertAdjacentHTML('beforeend', fileHtml);
        showNotification('File ready to upload', 'success');
    }

    function removePendingFile(fileId) {
        pendingFiles = pendingFiles.filter(f => f.id !== fileId);
        document.querySelector(`[data-file-id="${fileId}"]`)?.remove();
        updateStorageInfo();
    }

    function saveDocuments(propertyId) {
        const property = properties.find(p => p.id === propertyId);
        if (!property || pendingFiles.length === 0) return;

        if (!property.documents) property.documents = [];
        property.documents.push(...pendingFiles);
        
        saveToStorage();
        showNotification(`${pendingFiles.length} document(s) uploaded`, 'success');
        pendingFiles = [];
    }

    function viewDocument(propertyId, docId) {
        const property = properties.find(p => p.id === propertyId);
        if (!property) return;

        const doc = property.documents?.find(d => d.id === docId);
        if (!doc) return;

        // Open in new tab
        const win = window.open();
        if (doc.type.startsWith('image/')) {
            win.document.write(`<img src="${doc.data}" style="max-width: 100%; height: auto;">`);
        } else if (doc.type === 'application/pdf') {
            win.document.write(`<iframe src="${doc.data}" style="width:100%; height:100vh; border:none;"></iframe>`);
        } else {
            win.document.write(`<pre>${doc.data}</pre>`);
        }
    }

    function downloadDocument(propertyId, docId) {
        const property = properties.find(p => p.id === propertyId);
        if (!property) return;

        const doc = property.documents?.find(d => d.id === docId);
        if (!doc) return;

        const link = document.createElement('a');
        link.href = doc.data;
        link.download = doc.name;
        link.click();
        showNotification('Download started', 'success');
    }

    function deleteDocument(propertyId, docId) {
        const property = properties.find(p => p.id === propertyId);
        if (!property) return;

        if (!confirm('Delete this document?')) return;

        property.documents = property.documents.filter(d => d.id !== docId);
        saveToStorage();
        updateUI();
        showNotification('Document deleted', 'success');
    }

    // ========================================
    // UI UPDATES
    // ========================================

    function updateUI() {
        updateStatistics();
        renderProperties();
    }

    function updateStatistics() {
        const total = properties.length;
        const occupied = properties.filter(p => p.status === 'occupied').length;
        const vacant = total - occupied;
        
        const monthlyRevenue = properties
            .filter(p => p.status === 'occupied')
            .reduce((sum, p) => sum + parseFloat(p.price), 0);
        
        const annualRevenue = monthlyRevenue * 12;
        
        const totalDocuments = properties.reduce((sum, p) => 
            sum + (p.documents?.length || 0), 0
        );

        document.getElementById('statMonthlyRevenue').textContent = `‚Ç¨${monthlyRevenue.toLocaleString()}`;
        document.getElementById('statAnnualRevenue').textContent = `‚Ç¨${annualRevenue.toLocaleString()}`;
        document.getElementById('statTotalProperties').textContent = total;
        document.getElementById('statOccupancyDesc').textContent = `${occupied} occupied, ${vacant} vacant`;
        document.getElementById('statTotalDocuments').textContent = totalDocuments;
        document.getElementById('propertiesCount').textContent = total;
    }

    function renderProperties() {
        const grid = document.getElementById('propertiesGrid');
        const emptyState = document.getElementById('emptyState');

        if (properties.length === 0) {
            grid.style.display = 'none';
            emptyState.classList.add('active');
            return;
        }

        emptyState.classList.remove('active');
        grid.style.display = 'grid';

        grid.innerHTML = properties.map(property => `
            <div class="property-card">
                <div class="property-image-container">
                    ${property.photo ? 
                        `<img src="${property.photo}" class="property-image" alt="${property.name}">` :
                        `<div class="property-image-placeholder">üè†</div>`
                    }
                    <div class="property-status-badge ${property.status === 'occupied' ? 'status-occupied' : 'status-vacant'}">
                        ${property.status === 'occupied' ? '‚úì Occupied' : '‚óã Vacant'}
                    </div>
                </div>
                
                <div class="property-content">
                    <h3 class="property-title">${property.name}</h3>
                    <div class="property-address">üìç ${property.address}</div>

                    <div class="property-stats">
                        ${property.beds ? `
                            <div class="property-stat">
                                <div class="stat-label-small">Bedrooms</div>
                                <div class="stat-value-small">üõèÔ∏è ${property.beds}</div>
                            </div>
                        ` : ''}
                        ${property.size ? `
                            <div class="property-stat">
                                <div class="stat-label-small">Size</div>
                                <div class="stat-value-small">üìè ${property.size}m¬≤</div>
                            </div>
                        ` : ''}
                        <div class="property-stat">
                            <div class="stat-label-small">Monthly Rent</div>
                            <div class="stat-value-small">üí∞ ‚Ç¨${parseFloat(property.price).toLocaleString()}</div>
                        </div>
                    </div>

                    ${property.tenant && property.status === 'occupied' ? `
                        <div class="property-tenant">
                            <div class="tenant-avatar">${property.tenant.charAt(0).toUpperCase()}</div>
                            <div class="tenant-info">
                                <div class="tenant-label">Current Tenant</div>
                                <div class="tenant-name">${property.tenant}</div>
                            </div>
                        </div>
                    ` : ''}

                    ${renderDocumentsSection(property)}

                    <div class="property-actions">
                        <button class="btn-action" onclick="editProperty('${property.id}')">‚úèÔ∏è Edit</button>
                        <button class="btn-action" onclick="openDocumentsModal('${property.id}')">üìÑ Docs</button>
                        <button class="btn-action danger" onclick="deleteProperty('${property.id}')">üóëÔ∏è Delete</button>
                    </div>
                </div>
            </div>
        `).join('');
    }

    function renderDocumentsSection(property) {
        const docs = property.documents || [];
        
        if (docs.length === 0) {
            return `
                <div class="documents-section">
                    <div class="documents-header">
                        <div class="documents-title">Documents</div>
                        <div class="documents-count">0</div>
                    </div>
                    <div class="no-documents">No documents uploaded yet</div>
                </div>
            `;
        }

        return `
            <div class="documents-section">
                <div class="documents-header">
                    <div class="documents-title">Documents</div>
                    <div class="documents-count">${docs.length}</div>
                </div>
                <div class="documents-list">
                    ${docs.slice(0, 3).map(doc => `
                        <div class="document-item">
                            <div class="document-icon">${getCategoryIcon(doc.category)}</div>
                            <div class="document-info">
                                <div class="document-name">${doc.name}</div>
                                <div class="document-meta">${getCategoryName(doc.category)} ‚Ä¢ ${formatFileSize(doc.size)}</div>
                            </div>
                            <div class="document-actions">
                                <button class="doc-action-btn" onclick="viewDocument('${property.id}', '${doc.id}')" title="View">üëÅÔ∏è</button>
                                <button class="doc-action-btn" onclick="downloadDocument('${property.id}', '${doc.id}')" title="Download">‚¨áÔ∏è</button>
                                <button class="doc-action-btn delete" onclick="deleteDocument('${property.id}', '${doc.id}')" title="Delete">üóëÔ∏è</button>
                            </div>
                        </div>
                    `).join('')}
                    ${docs.length > 3 ? `
                        <div style="text-align: center; padding: 10px; font-size: 12px; color: var(--text-secondary);">
                            +${docs.length - 3} more document(s)
                        </div>
                    ` : ''}
                </div>
            </div>
        `;
    }

    // ========================================
    // STORAGE MANAGEMENT
    // ========================================

    function updateStorageInfo() {
        const used = getStorageSize();
        const maxBytes = MAX_STORAGE_MB * 1024 * 1024;
        const percentage = (used / maxBytes) * 100;

        document.getElementById('storageUsedText').textContent = 
            `${(used / 1024 / 1024).toFixed(2)} MB / ${MAX_STORAGE_MB} MB`;
        
        document.getElementById('storageBarFill').style.width = `${Math.min(percentage, 100)}%`;
        document.getElementById('storagePercentage').textContent = `${percentage.toFixed(1)}%`;

        if (percentage > 90) {
            showNotification('Storage almost full!', 'error');
        }
    }

    function getStorageSize() {
        let total = 0;
        for (let key in localStorage) {
            if (localStorage.hasOwnProperty(key)) {
                total += localStorage[key].length + key.length;
            }
        }
        return total * 2; // UTF-16 = 2 bytes per char
    }

    function showStorageInfo() {
        const used = getStorageSize();
        const usedMB = (used / 1024 / 1024).toFixed(2);
        const percentage = ((used / (MAX_STORAGE_MB * 1024 * 1024)) * 100).toFixed(1);
        
        alert(`Storage Info:\n\nUsed: ${usedMB} MB / ${MAX_STORAGE_MB} MB\nPercentage: ${percentage}%\n\nTip: Export your data regularly for backup!`);
    }

    function exportAllData() {
        const data = {
            properties: properties,
            exportedAt: new Date().toISOString(),
            version: '2.0'
        };

        const dataStr = JSON.stringify(data, null, 2);
        const dataBlob = new Blob([dataStr], { type: 'application/json' });
        const url = URL.createObjectURL(dataBlob);
        const link = document.createElement('a');
        link.href = url;
        link.download = `boom-owner-data-${new Date().toISOString().split('T')[0]}.json`;
        link.click();
        URL.revokeObjectURL(url);
        showNotification('All data exported successfully', 'success');
    }

    // ========================================
    // UTILITY FUNCTIONS
    // ========================================

    function generateId() {
        return 'boom_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
    }

    function formatFileSize(bytes) {
        if (bytes === 0) return '0 B';
        const k = 1024;
        const sizes = ['B', 'KB', 'MB'];
        const i = Math.floor(Math.log(bytes) / Math.log(k));
        return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
    }

    function getCategoryIcon(category) {
        const icons = {
            contract: 'üìù',
            photo: 'üì∏',
            id: 'ü™™',
            receipt: 'üßæ',
            invoice: 'üíµ',
            other: 'üìÑ'
        };
        return icons[category] || 'üìÑ';
    }

    function getCategoryName(category) {
        const names = {
            contract: 'Contract',
            photo: 'Photo',
            id: 'ID Document',
            receipt: 'Receipt',
            invoice: 'Invoice',
            other: 'Other'
        };
        return names[category] || 'Document';
    }

    function showNotification(message, type = 'success') {
        const notification = document.createElement('div');
        notification.className = `notification ${type}`;
        notification.innerHTML = `
            <div class="notification-icon">${type === 'success' ? '‚úì' : '‚úï'}</div>
            <div class="notification-content">
                <div class="notification-title">${type === 'success' ? 'Success' : 'Error'}</div>
                <div class="notification-message">${message}</div>
            </div>
        `;
        
        document.body.appendChild(notification);
        
        setTimeout(() => {
            notification.style.animation = 'slideInRight 0.3s ease reverse';
            setTimeout(() => notification.remove(), 300);
        }, 3000);
    }

    console.log('üöÄ BOOM Owner Dashboard V2.0 Loaded');
    console.log('üìÑ Documents: ENABLED');
    console.log('üì∏ Photos: ENABLED');
    console.log('üíæ Storage: Browser LocalStorage');
</script>
